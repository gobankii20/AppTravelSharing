<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d10dp"
        android:layout_marginTop="@dimen/d10dp"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tvTitleDate"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d10dp"
            android:layout_marginEnd="@dimen/d10dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d10dp"
            android:textColor="@color/colorTabNotSelected"
            android:textSize="@dimen/text_size_12dp" />

        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvMessage"
                android:gravity="center"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d5dp"
                android:layout_marginEnd="@dimen/d5dp"
                android:background="@drawable/bg_chat_user"
                android:paddingLeft="@dimen/d30dp"
                android:paddingTop="@dimen/d3dp"
                android:paddingRight="@dimen/d30dp"
                android:paddingBottom="@dimen/d3dp"
                android:textColor="@color/textColorWhite"
                android:textSize="@dimen/text_size_15dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_weight="0"
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/d25dp"
                android:layout_height="@dimen/d25dp"
                android:background="@drawable/default_pic"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </LinearLayout>


        <TextView
            android:visibility="visible"
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d10dp"
            android:layout_marginEnd="@dimen/d30dp"
            android:gravity="end"
            android:paddingStart="@dimen/d10dp"
            android:paddingTop="@dimen/d3dp"
            android:paddingEnd="@dimen/d3dp"
            android:paddingBottom="@dimen/d3dp"
            android:textColor="@color/colorTabNotSelected"
            android:textSize="@dimen/text_size_12dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>